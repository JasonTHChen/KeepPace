<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ca.sclfitness.keeppace.MainActivity">

    <Button
        android:id="@+id/btn_main_grindPace"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_above="@+id/btn_main_racePace"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="45dp"
        android:background="@drawable/button"
        android:onClick="onClickGrind"
        android:text="@string/main_grindBtn"
        android:textColor="#FFFFFF"
        android:textSize="18sp" />

    <Button
        android:id="@+id/btn_main_racePace"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="184dp"
        android:background="@drawable/button"
        android:onClick="onClickRace"
        android:text="@string/main_raceBtn"
        android:textColor="#FFFFFF"
        android:textSize="18sp" />

</RelativeLayout>

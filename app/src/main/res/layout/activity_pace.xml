<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ca.sclfitness.keeppace.PaceActivity">

    <Button
        android:id="@+id/btn_pace_paceType"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:background="@drawable/button"
        android:fontFamily="Verdana San"
        android:onClick="onJustClick"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:layout_marginTop="130dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/btn_pace_beat"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:background="@drawable/button"
        android:onClick="onBeatClick"
        android:text="@string/all_raceBtn"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:layout_marginTop="80dp"
        android:layout_below="@+id/btn_pace_paceType"
        android:layout_centerHorizontal="true" />

</RelativeLayout>

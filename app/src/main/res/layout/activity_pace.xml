<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ca.sclfitness.keeppace.PaceActivity">

    <TextView
        android:id="@+id/textView_grind_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textSize="30dp" />

    <Button
        android:id="@+id/btn_grind_paceType"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_marginBottom="47dp"
        android:background="@drawable/button"
        android:fontFamily="Verdana San"
        android:onClick="onJustClick"
        android:textColor="#FFFFFF"
        android:textSize="18dp"
        android:layout_above="@+id/btn_main_racePace"
        android:layout_alignStart="@+id/btn_main_racePace" />

    <Button
        android:id="@+id/btn_main_racePace"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="184dp"
        android:background="@drawable/button"
        android:onClick="onBeatClick"
        android:text="@string/all_raceBtn"
        android:textColor="#FFFFFF"
        android:textSize="18dp" />
</RelativeLayout>
